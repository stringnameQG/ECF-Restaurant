{% extends 'base.html.twig' %}

{% block javascripts %}
    <script src="{{ asset('js/images.js') }}"></script>
{% endblock javascripts %}

{% block title %}Dishes index{% endblock %}

{% block main %}
    <script src="{{ asset('js/images.js') }}"></script>
    <h1>Dishes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dish in dishes %}
            <tr>
                <td>{{ dish.id }}</td>
                <td>{{ dish.title }}</td>
                <td>{{ dish.description }}</td>
                <td>{{ dish.price }}</td>
                <td>
                    {{ include('dish/_delete_form.html.twig') }}
                    <a href="{{ path('app_dishes_edit', {'id': dish.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_dishes_new') }}">Create new</a>
{% endblock %}
