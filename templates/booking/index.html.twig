{% extends 'base.html.twig' %}

{% block main %}
    <h2>Reservation</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre de personne</th>
                <th>Date</th>
                <th>Nom</th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.numberOfGuests }}</td>
                <td>{{ booking.date ? booking.date|date('Y-m-d H:i') : '' }}</td>
                <td>{{ booking.name }}</td>
                <td class="td-action">
                    {{ include('booking/_delete_form.html.twig') }}
                    {# <a class="btn-modifier" href="{{ path('app_booking_edit', {'id': booking.id}) }}">MODIFIER</a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td>no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_booking_new') }}">Create new</a> #}
{% endblock %}
{% block footer %}
<footer class='pagination'>
    {% for page in 1..totalPages %}
        {% if page == currentPage %}
            <span class="page-courante">{{ page }}</span>
        {% else %}
            <a class="page-non-courante" href="{{ path('app_booking_index', {'page': page}) }}">{{ page }}</a>
        {% endif %}
    {% endfor %}
</footer>
{% endblock %}
